<h4>
    Add a burger order for the kitchen
    <span style="font-size:0.6em;">(Bob won't be happy...)</span>
</h4>
<form class="addBurger">
    <div class="row mx-auto" style="width: 500px;">
        <div class="col-sm-9">
            <input type="text" id="burgerName" name="name" class="form-control " placeholder="Burger name">
        </div>
        <div class="col-sm-3">
            <button type="submit" class="btn btn-dark">Add Ticket</button>
        </div>
    </div>
</form>
</div>
</div>
<div class="row main mx-auto">
    <div class="col-sm bOrders">
        <div class="card">
            <div class="card-header">
                <h2>Burger Orders:</h2>
            </div>
            {{> burgers/order-burgers}}
        </div>
    </div>
    <div class="col-sm bPic">
        <img src="/assets/img/burgers.png" alt="burgers">
    </div>
    <div class="col-sm bReady">
        <div class="card">
            <div class="card-header">
                <h2>Burgers Prepared:</h2>
            </div>
            {{> burgers/ready-burgers}}
        </div>
    </div>
</div>